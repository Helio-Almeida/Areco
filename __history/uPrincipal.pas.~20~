  Vcl.Grids, Vcl.DBGrids, Classe_Produto;

type
  TfrmPrincipal = class(TForm)
    pnlPrincipal: TPanel;
    DBGridProdutos: TDBGrid;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.dfm}

